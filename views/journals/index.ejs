<%- include('../partials/header') %>

<h1 class="title">My Journals</h1>
<% if (journals.length > 0) { %>
<% journals.forEach(function(journal) { %>
<form action="/journals/<%= journal.id %>?_method=DELETE" method="POST" class="delete-form">
    <div class="block">
        <p class="box">
            <b>Name: </b><%= journal.name %> <br>
            <b>Grade: </b><%= journal.grade %> <br>
            <b>Location: </b><%= journal.location %> <br>
            <b>Description: </b><%= journal.description %> <br>
    <a class="button is-small is-success" href="/journals/<%= journal.id %>">Explore</a>
    <a class="button is-small is-warning" href="journals/<%= journal.id %>/edit">Edit</a>  
    <button class="button is-small is-danger" type="submit">Delete</button>
    </form>  
</p>
</div>
<% });} else { %>
    <p>You have no Journals!</p>
    <% } %>

<a class="button is-small is-info" href="/journals/new">Add a journal!</a>
<br>
<br>
<a href="/logout"><i class="material-icons left"></i>Log Out</a>
   
